# Configuring zsh
alias zshconfig="vim ~/.zshrc && omz reload"

# Configuring aliases
alias aliases="vim ~/.personal_aliases && omz reload"

# Git
alias gs="git status"
alias ga="git add"
alias gc="git commit -m"
alias gca="git commit -am"
alias gp="git pull"
alias gf="git fetch"
alias grm="git rebase origin/main"
alias gpf="git push --force-with-lease"
alias gchm="git checkout main && git pull"
alias gbn="git checkout -b"

# Docker aliases
alias builder-x="export BUILDX_BUILDER=cloud-faunarobot-fauna-1"
